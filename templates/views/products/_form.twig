<form method="POST" action="/products/{% if product.id %}{{ product.id }}{% endif %}">
    {% if product.id %}
        <input type="hidden" name="id" value="{{ product.id }}">
    {% endif %}
    <div>
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" value="{{ product.title }}" />
    </div>
    <div>
        <label for="slug">Slug:</label>
        <input type="text" name="slug" id="slug" value="{{ product.slug }}" />
    </div>
    <div>
        <label for="description">Description:</label>
        <textarea type="text" name="description" id="description" value="{{ product.description}}" /></textarea>
    </div>
    <div>
        <label for="price">Price:</label>
        <input type="text" name="price" id="price" value="{{ product.price }}" />
    </div>
    <div>
        <label for="is_published">Is published:</label>
        <input type="checkbox" name="is_published" id="is_published" value="1" {% if product.is_published %}checked{% endif %} />
    </div>
    <div>
        <input type="submit" value="submit" />
        
    </div>
</form>